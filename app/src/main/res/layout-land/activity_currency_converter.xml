<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top app bar that hosts your menu -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="@string/app_name" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/converterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currency Converter"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingBottom="16dp"/>

            <TextView
                android:id="@+id/rateDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 GBP = 1.3456 USD"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:textColor="#1976D2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/gbpLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GBP (British Pound):"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/gbpInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter amount"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"
                    android:padding="12dp"
                    android:background="#99000000"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"/>
            </LinearLayout>

            <Button
                android:id="@+id/swapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‡… Swap Direction"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/foreignLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USD (United States Dollar):"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingBottom="8dp"/>

                <EditText
                    android:id="@+id/foreignInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Converted amount"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"
                    android:padding="12dp"
                    android:background="#99000000"
                    android:textColor="#000000"
                    android:textColorHint="#7F7F7F"/>
            </LinearLayout>

            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Currency List"
                android:textSize="16sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
